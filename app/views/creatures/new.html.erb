<h1>Update our creature database</h1>

<%= form_for @creature do |c| %>
  <div>
    <%= c.label :name %>
    <%= c.text_field :name  %>
  </div>

  <div>
    <%= c.label :desciption %>
    <%= c.text_area :desciption  %>
  </div>

  <div>
    <%= c.label :location %>
    <%= c.text_field :location  %>
  </div>

  <%= c.submit  %>
<% end %> 